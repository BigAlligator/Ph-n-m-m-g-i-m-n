<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ta.quancafe.MainActivity.Activity.ThanhToanActivity"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarThanhToan"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#974307"
        app:title="   Cafe - Bánh ngọt - Giải khát"
        app:titleTextColor="#ffffff">

    </android.support.v7.widget.Toolbar>
    <TextView
        android:background="#974307"

        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Thanh Toán"
        android:id="@+id/textmenu"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#974307"

        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Date"
        android:id="@+id/textdate"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/ListviewThanhToan"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:background="#edac70"
        android:layout_weight="0.66"></ListView>


    <LinearLayout
        android:background="#974307"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.14">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#974307"
            android:gravity="center"
            android:text="Tổng tiền thanh toán:"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0.77"
            android:background="#974307"
            android:gravity="center"
            android:text="Giá trị"
            android:textAlignment="textEnd"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#974307"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0.01"
            android:background="#974307"
            android:gravity="left|center"
            android:text="Bàn số:"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerBan"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/buttonThanhtoanHD"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0.41"
            android:background="#974307"
            android:text="Thanh toán"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/buttonHuyHD"
            android:layout_width="73dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0.68"
            android:background="#974307"
            android:text="Hủy"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>
