<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
         app:title="  Đăng nhập hệ thống "
        app:titleTextColor="#ffffff"
        android:background="#974307"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:id="@+id/toolbarDangNhap"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#ba881b"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewServername"
            android:layout_width="61dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="Server:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextlocalhost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ip server name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#ba881b"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDangnhap"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:background="#974307"
            android:text="Đăng nhập"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/buttonHuyDangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#974307"
            android:text="Hủy"
            android:textColor="#ffffff" />
    </LinearLayout>


</LinearLayout>